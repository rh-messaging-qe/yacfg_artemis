{% include 'libs/headers/properties_headers.jinja2' %}

# ---------------------------------------------------------------------------
{% include 'libs/licenses/apache-2.0/properties.jinja2' %}
# ---------------------------------------------------------------------------

{% if artemis_utility_profile.home is defined %}
ARTEMIS_HOME='{{ artemis_utility_profile.home }}'
{% endif %}
{% if artemis_utility_profile.instance is defined %}
ARTEMIS_INSTANCE='{{ artemis_utility_profile.instance }}'
{% endif %}
{% if artemis_utility_profile.data_dir is defined %}
ARTEMIS_DATA_DIR='{{ artemis_utility_profile.data_dir }}'
{% endif %}
{% if artemis_utility_profile.etc_dir is defined %}
ARTEMIS_ETC_DIR='{{ artemis_utility_profile.etc_dir }}'
{% endif %}
{% if artemis_utility_profile.oome_dump is defined %}
ARTEMIS_OOME_DUMP='{{ artemis_utility_profile.instance }}/log/oom_dump.hprof'
{% endif %}

{% if artemis_utility_profile.instance_uri is defined or artemis_utility_profile.instance_etc_uri is defined %}
    {% if artemis_utility_profile.instance_uri is defined %}
ARTEMIS_INSTANCE_URI='{{ artemis_utility_profile.instance_uri }}'
    {% endif %}
    {% if artemis_utility_profile.instance_etc_uri is defined %}
ARTEMIS_INSTANCE_ETC_URI='{{ artemis_utility_profile.instance_etc_uri }}'
    {% endif %}
{% endif %}

{% if artemis_utility_profile.logging_args is defined %}
if [ -z "$LOGGING_ARGS" ]; then
    LOGGING_ARGS="{{- artemis_utility_profile.logging_args|join(' ') }} "
fi
{% endif %}

{% if artemis_utility_profile.java_args is defined %}
# Java Opts
if [ -z "$JAVA_ARGS" ]; then
    JAVA_ARGS="{{- artemis_utility_profile.java_args|join(' ') }} "
fi
{% endif %}

{% if artemis_utility_profile.debug_args is defined %}
DEBUG_ARGS="{{ artemis_utility_profile.debug_args|join(' ') }}"
{% endif %}

